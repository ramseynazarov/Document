<div class="col-lg-6">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Добавление документа</h5>

            <!-- General Form Elements -->
            <form asp-action="Create" asp-controller="Document" method="post">
                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label">Номер документа</label>
                    <div class="col-sm-10">
                        <input asp-for="DocumentNumber" type="inputNumber" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Тип документа</label>
                    <div class="col-sm-10">
                        <input asp-for="Type" type="text" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Имя корреспондента</label>
                    <div class="col-sm-10">
                        <input asp-for="Correspondent" type="text" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Номер корреспондента</label>
                    <div class="col-sm-10">
                        <input asp-for="CorrespondentNumber" type="text" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Описание</label>
                    <div class="col-sm-10">
                        <input asp-for="Topic" type="text" class="form-control">
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Список отделов</label>
                    <div class="col-sm-10">
                        @foreach (var departament in Model.Departments)
                        {
                            <select class="form-select" asp-for="DepartmentId" aria-label="Default select example">
                                <option value="@departament.Id">@departament.Name</option>

                            </select>
                        }

                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Список испольнителей</label>
                    <div class="col-sm-10">
                        <select asp-for="UserId" class="form-select" multiple aria-label="multiple select example">
                            @foreach (var user in Model.Users)
                            {
                                <option value="@user.Id">@user.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Добавить</button>
                    </div>
                </div>

            </form><!-- End General Form Elements -->

        </div>
    </div>

</div>


